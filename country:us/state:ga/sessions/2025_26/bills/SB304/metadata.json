  "identifier": "SB 304",
  "title": "Ad Valorem Taxation; direct payments to property owners whose property was damaged or destroyed as a result of a certain natural disaster; provide",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
